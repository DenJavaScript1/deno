{
  "tempDir": true,
  "tests": {
    // should run fine when not referencing a failing dep entry
    "run_ok": {
      "steps": [
        {
          "args": "install",
          "output": "install.out"
        },
        {
          "args": "run ok.ts",
          "output": "ok.ts.out"
        }
      ]
    },
    // should fail when referencing a failing dep entry
    "run_error": {
      "steps": [
        {
          "args": "install",
          "output": "install.out"
        },
        {
          "args": "run error.ts",
          "exitCode": 1,
          "output": "error.ts.out"
        }
      ]
    },
    // should output a warning about the failing dep entry
    "task_test": {
      "steps": [
        {
          "args": "install",
          "output": "install.out"
        },
        {
          "args": "task test",
          "output": "task.out"
        }
      ]
    }
  }
}
