{
  "compilerOptions": {
    "allowJs": true,
    "module": "es2015",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true
  },
  "include": ["js/main.ts"],
  "exclude": ["node_modules"]
}
